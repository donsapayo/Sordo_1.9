<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f44336"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="430dp"
        android:layout_height="120dp"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:text="El Sordo"
        android:textColor="#000"
        android:textSize="70dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <!--imagen-->
    <ImageView
        android:visibility="invisible"
        android:id="@+id/port"
        android:layout_width="230dp"
        android:layout_height="230dp"
        android:layout_marginTop="90dp"
        android:src="@drawable/portada"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <!--el texto-->
    <TextView
        android:layout_width="430dp"
        android:layout_height="250dp"
        android:layout_marginTop="230dp"
        android:gravity="center"
        android:text="Caletas de canciones"
        android:textColor="#000"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:layout_width="430dp"
        android:layout_height="100dp"
        android:layout_marginTop="330dp"
        android:gravity="center"
        android:text="para no prestar atencion en clases"
        android:textColor="#000"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <!--crear campo para poner los datos-->
    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="300dp"
        android:layout_marginTop="400dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!--para escribir-->
        <EditText
            android:id="@+id/papu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Usuario"
            android:inputType="text"
            android:minHeight="30dp" />

        <EditText
            android:id="@+id/secreto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ContraseÃ±a"
            android:inputType="textPassword"
            android:minHeight="30dp"
            />

        <!--boton-->
        <Button
            android:id="@+id/botoncito"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:backgroundTint="@color/black"
            android:onClick="onClickEntrar"
            android:text="Iniciar Sesion" />



    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>